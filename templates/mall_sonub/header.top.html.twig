					<a href='/user/login' class="login">{{ ko ? '로그인' : 'Sign in' }}</a>
				{% endif %}
			</li>
			<li>

				{% if logged_in %}
					<a href="/user/logout">{{ ko ? 'Sign Out' : 'Sign Out' }}</a>
				{% else %}
