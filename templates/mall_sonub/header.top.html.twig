{% if ko %}
<style>
    .layout > header .top .item .text {
        font-family: Gulim, "Malgun Gothic", AppleGothic;
    }
</style>
{% endif %}
<div class='top'>
	<div class='inner'>
		<table class='menu-table' width="100%" cellpadding="0" cellspacing="0">
			<tr>
				<td class="logo">
					<a href="/">
						<div class="item">
							<div class="sprite"></div>
						</div>
					</a>
				</td>

				<td class="ask">
					<a href="/post/ask">
						<div class="item">
							<div class="sprite"></div>
							<div class="text">
								<script>ln('Ask,질문답변');</script>
							</div>
						</div>
					</a>
				</td>

				<td class="knowledge">
					<a href="/post/knowledge">
						<div class="item knowledge">
							<div class="sprite"></div>
							<div class="text">
                                <script>ln('Knowledge,지식인');</script>
							</div>
						</div>
					</a>
				</td>

				<td class="discussion">
					<a href="/post/discussion">
						<div class="item">
							<div class="sprite"></div>
							<div class="text">
                                <script>ln('Discussion,자유토론');</script>
							</div>
						</div>
					</a>
				</td>

				<td class="market">
					<a href="/">
						<div class="item">
							<div class="sprite"></div>
							<div class="text">
                                <script>ln('Market,쇼핑몰');</script>
                            </div>
						</div>
					</a>
				</td>


				<td class="fhm">
					<a href="/post/fhm">
						<div class="item">
							<div class="sprite"></div>
							<div class="text">
                                <script>ln('FHM,매거진');</script>
							</div>
						</div>
					</a>
				</td>

				<td class="news">
					<a href="/post/news">
						<div class="item">
							<div class="sprite"></div>
							<div class="text">
                                <script>ln('News,뉴스');</script>
							</div>
						</div>
					</a>
				</td>

				<td class="music">
					<a href="/post/music">
						<div class="item">
							<div class="sprite"></div>
							<div class="text">
                                <script>ln('Music,음악');</script>
							</div>
						</div>
					</a>
				</td>

				<td class="job">
					<a href="/post/jobs">
						<div class="item">
							<div class="sprite"></div>
							<div class="text">
                                <script>ln('Jobs,구인구직');</script>
							</div>
						</div>
					</a>
				</td>

				<td class="login">
					{% if logged_in %}
						<a href="/page/{{ user.username }}">
							<div class="item user page">
								<div class="sprite">
									{% if user_photo_src %}
										<img src="{{ user_photo_src }}">
									{% else %}
										<img src="/{{ dir_sub_theme }}/img/primary-photo.png">
									{% endif %}
								</div>
								<div class="text">
                                    <script>ln('My Page,개인정보');</script>
								</div>
							</div>
						</a>
					{% else %}
                    <a href="/member/login">
							<div class="item user signin">
								<div class="sprite"></div>
								<div class="text">
                                    <script>ln('Sign in,로그인');</script>
								</div>
							</div>
                        </a>
					{% endif %}
				</td>
				<td class='more'>
					<div class="item more">
						<div class="sprite"></div>
						<div class="text">
                            <script>ln('More,메뉴');</script>
						</div>
					</div>
				</td>
			</tr>
		</table>
	</div>
</div>