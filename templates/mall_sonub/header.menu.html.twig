{% set menus = data.category_entity_list %}
{% set category_id = input.category_id  %}
{% if data.view_item_category_root %}
	{% set category_id = data.view_item_category_root.id.value %}
{% endif %}

<div class='bottom'>
	<div class='inner clearfix'>
	{% for menu in menus %}
		<a class='menu{{ category_id == menu.entity.id.value ? ' selected'}}' href='/mall/item/search?category_id={{ menu.entity.id.value }}'>{{ menu.entity.name.value }}<img src='/themes/withcenter/templates/mall_sonub/img/menu_selected.png'/></a>
	{% endfor %}
	</div>
</div>